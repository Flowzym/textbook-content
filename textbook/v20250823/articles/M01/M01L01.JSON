    {
      "type": "concept",
      "title": "Negative Zahlen – das Vorzeichen-Chaos vermeiden",
      "title_segments": [
        {
          "t": "text",
          "text": "Negative Zahlen – das Vorzeichen-Chaos vermeiden"
        }
      ],
      "items": [
        {
          "segments": [
            {
              "t": "text",
              "text": "Negative Zahlen sind nicht 'schlechte' Zahlen, sondern Zahlen mit einer Richtung. Auf dem Zahlenstrahl gehen sie nach links."
            }
          ]
        },
        {
          "segments": [
            {
              "t": "text",
              "text": "Vorzeichenregeln: Plus mal "
            },
            {
              "t": "math_inline",
              "tex": "Plus = Plus"
            },
            {
              "t": "text",
              "text": ", Minus mal "
            },
            {
              "t": "math_inline",
              "tex": "Minus = Plus"
            },
            {
              "t": "text",
              "text": ", Plus mal "
            },
            {
              "t": "math_inline",
              "tex": "Minus = Minus"
            },
            {
              "t": "text",
              "text": ", Minus mal "
            },
            {
              "t": "math_inline",
              "tex": "Plus = Minus"
            },
            {
              "t": "text",
              "text": ". Merksatz: 'Gleiche Vorzeichen geben Plus.'"
            }
          ]
        },
        {
          "segments": [
            {
              "t": "text",
              "text": "Beim Subtrahieren negativer Zahlen: "
            },
            {
              "t": "math_inline",
              "tex": "a - (-b) = a + b"
            },
            {
              "t": "text",
              "text": ". 'Minus Minus wird Plus'. Das ist keine willkürliche Regel, sondern folgt aus der Definition der Subtraktion."
            }
          ]
        }
      ]
    },
