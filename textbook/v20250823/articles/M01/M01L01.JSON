    {
      "type": "concept",
      "title": "Häufige Denkfallen und wie du sie umgehst",
      "title_segments": [
        {
          "t": "text",
          "text": "Häufige Denkfallen und wie du sie umgehst"
        }
      ],
      "items": [
        {
          "segments": [
            {
              "t": "text",
              "text": "Denkfalle 1 – Punkt vor Strich vergessen: "
            },
            {
              "t": "math_inline",
              "tex": "2 + 3 \\times 4"
